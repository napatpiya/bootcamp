@model Chef

<div class="row">
    <div class="col">
        <a href="/">Home</a>
    </div>
    <div class="col">
        <p>Add a Chef!</p>
    </div>
    <div class="col"></div>
</div>
<div class="row">
    <div class="col"></div>
    <div class="col">
        <form asp-action="createchef" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
                <small><span asp-validation-for="FirstName" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <small><span asp-validation-for="LastName" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Birth"></label>
                <input asp-for="Birth" class="form-control" max='@DateTime.Now.ToString("dd/MM/yyyy")'>
                <small><span asp-validation-for="Birth" style="color: red"></span></small>
            </div>
            <button type="submit" class="btn btn-dark">Add Chef</button>
        </form>
    </div>
    <div class="col"></div>
</div>