@model Dish

<div class="row">
    <div class="col">
        <a href="/">Home</a>
    </div>
    <div class="col">
        <p>Add a Dish!</p>
    </div>
    <div class="col"></div>
</div>
<div class="row">
    <div class="col"></div>
    <div class="col">
        <form asp-action="createdish" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <small><span asp-validation-for="Name" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Calories"></label>
                <input asp-for="Calories" class="form-control">
                <small><span asp-validation-for="Calories" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label>Chef</label>
                <select asp-for="ChefId" class="form-control">
                    @foreach (var chef in ViewBag.AllChefs)
                    {
                        <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                    }
                </select>
                <small><span asp-validation-for="ChefId" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <small><span asp-validation-for="Tastiness" style="color: red"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
                <small><span asp-validation-for="Description" style="color: red"></span></small>
            </div>
            <button type="submit" class="btn btn-dark">Add Dish</button>
        </form>
    </div>
    <div class="col"></div>
</div>