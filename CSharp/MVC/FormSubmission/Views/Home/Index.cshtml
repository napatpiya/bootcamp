@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container">
    <br /><br /><br />
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form asp-action="register" asp-controller="Home" method="POST">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control">
                    <small><span asp-validation-for="FirstName" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control">
                    <small><span asp-validation-for="LastName" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" class="form-control">
                    <small><span asp-validation-for="Age" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                    <small><span asp-validation-for="Email" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                    <small><span asp-validation-for="Password" style="color: red"></span></small>
                </div>
                <button type="submit" class="btn btn-outline-info" style="float: right">Submit</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
