@model Dish

<div class="content2">
    <br /><br /><br />
    <div class="row">
        <div class="col">
            <a href="/" class="btn btn-outline-info btn-sm">Home</a>
        </div>
        <div class="col">
            <h1>Edit @Model.Name</h1>
        </div>
        <div class="col"></div>
    </div>
    
    <form asp-action="update" asp-route-dishId="@Model.DishId" asp-controller="Home" method="POST">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Chef"></label>
                    <input asp-for="Chef" class="form-control">
                    <small><span asp-validation-for="Chef" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <small><span asp-validation-for="Name" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control">
                    <small><span asp-validation-for="Calories" style="color: red"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" cols="30" rows="4"></textarea>
                <small><span asp-validation-for="Description" style="color: red"></span></small>
                <br /><br />
                <button type="submit" class="btn btn-primary">Edit Dish</button>
            </div>
            <div class="col"></div>
        </div>
    </form>
</div>


