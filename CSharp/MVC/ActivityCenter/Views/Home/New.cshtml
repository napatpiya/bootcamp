@model Event

<div class="content">
    <div class="header">
        <br />
        <div class="row">
            <div class="col">
                <h2>Dojo Activity Center</h2>
            </div>
            <div class="col"></div>
            <div class="col text-right">
                <a href="/home">Home</a>
                <a href="/" style="display: inline; margin-left: 20px;">Logout</a>
            </div>
        </div>
        <hr>
    </div>
    <div class="detail">
        <br /><br />
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h3>Create an Activity @ViewBag.UserId</h3>
                <br />
                <form action="/create/activity/@ViewBag.UserId" method="post">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control">
                        <small><span asp-validation-for="Title" style="color: red"></span></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime"></label>
                        <input asp-for="StartTime" class="form-control">
                        <small><span asp-validation-for="StartTime" style="color: red"></span></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <div class="group">
                            <input asp-for="Duration" class="form-control" style="display: inline; width: 100px;">
                            <select asp-for="TypeDuration" class="form-control" style="display: inline; width: 100px">
                                <option value="Hours">Hours</option>
                                <option value="Minutes">Minutes</option>
                                <option value="Days">Days</option>
                            </select>
                        </div>
                        <small><span asp-validation-for="Duration" style="color: red"></span></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <small><span asp-validation-for="Description" style="color: red"></span></small>
                    </div>
                    <button type="submit" class="btn btn-dark" style="float: right">Create Activity</button>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
</div>