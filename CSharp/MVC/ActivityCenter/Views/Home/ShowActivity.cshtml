

<div class="content">
    <div class="header">
        <br />
        <div class="row">
            <div class="col">
                <h2>Dojo Activity Center</h2>
            </div>
            <div class="col"></div>
            <div class="col text-right">
                <a href="/home">Home</a>
                <a href="/" style="display: inline; margin-left: 20px;">Logout</a>
            </div>
        </div>
        <hr>
    </div>
    <div class="detail">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h3>@ViewBag.Activity.Title</h3>
                <p>Event Coordinator: @ViewBag.Creator.Name</p>
                <p>Description: </p>
                <p>@ViewBag.Activity.Description</p>
                <p>Participants</p>
                <ul>
                @foreach( var name in @ViewBag.Activity.UsersJoin )
                {
                    <li>@name.User.Name</li>
                }
                </ul>
            </div>
            <div class="col"></div>
        </div>
    </div>
</div>