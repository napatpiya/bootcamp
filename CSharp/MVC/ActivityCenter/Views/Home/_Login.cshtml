@model LoginUser

<h4>Login</h4>
<form asp-action="VerifyLogin" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="LEmail"></label>
        <input asp-for="LEmail" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LPassword"></label>
        <input asp-for="LPassword" class="form-control">
        <small><span asp-validation-for="LEmail" style="color: red;"></span></small>
    </div>
    <button type="submit" class="btn btn-dark" style="float: right;">Register</button>
</form>