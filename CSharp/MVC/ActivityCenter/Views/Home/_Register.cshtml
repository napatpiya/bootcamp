@model User


<h4>Register</h4>
<form asp-action="VerifyRegister" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <small><span asp-validation-for="Name" style="color: red;"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <small><span asp-validation-for="Email" style="color: red;"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <small><span asp-validation-for="Password" style="color: red;"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control">
        <small><span asp-validation-for="ConfirmPassword" style="color: red;"></span></small>
    </div>
    <button type="submit" class="btn btn-dark" style="float: right;">Register</button>
</form>
