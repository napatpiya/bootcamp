@{
    ViewData["Title"] = "Login";
}

@model LoginUser

<div class="content">
    <br /><br />
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <h3>Login</h3>
            <form asp-action="VerifyLogin" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                </div>
                <small><span asp-validation-for="Email" style="color: red"></span></small>
                <small><span asp-validation-for="Password" style="color: red"></span></small>
                <p><a href="/">Need to Register?</a></p>
                <button type="submit" class="btn btn-dark">Login</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>