@{
    ViewData["Title"] = "Products Page";
}

@model Product

<div class="content">
    <div class="row">
        <div class="col">
            <br /><br />
            <h4>New Product</h4>
            <br />
            <form asp-action="CreateProduct" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <small><span asp-validation-for="Name" style="color: red;"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" cols="20" rows="3"></textarea>
                    <small><span asp-validation-for="Description" style="color: red;"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <small><span asp-validation-for="Price" style="color: red;"></span></small>
                </div>
                <button type="submit" class="btn btn-dark" style="float: right">Create</button>
            </form>
        </div>
        <div class="col">
            <br /><br />
            <h4>Existing Product</h4>
            <br />
            <ul>
                @foreach ( var product in ViewBag.AllProducts )
                {
                    <li><a href="product/@product.ProductId">@product.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>